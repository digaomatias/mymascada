{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Async", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Warning",
        "MyMascada": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq:5341",
          "apiKey": ""
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "/app/logs/mymascada-.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 90,
                "fileSizeLimitBytes": 209715200,
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} {CorrelationId} {UserId}: {Message:lj}{NewLine}{Exception}",
                "shared": true,
                "flushToDiskInterval": "00:00:01"
              }
            }
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "/app/logs/audit/audit-.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 2555,
                "fileSizeLimitBytes": 209715200,
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Properties:j}{NewLine}",
                "restrictedToMinimumLevel": "Information",
                "shared": true,
                "flushToDiskInterval": "00:00:01"
              }
            }
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "/app/logs/errors/error-.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 180,
                "fileSizeLimitBytes": 104857600,
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} {CorrelationId}: {Message:lj}{NewLine}{Exception}{NewLine}{Properties:j}{NewLine}---{NewLine}",
                "restrictedToMinimumLevel": "Error",
                "shared": true,
                "flushToDiskInterval": "00:00:01"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithEnvironmentName", "WithProcessId" ],
    "Properties": {
      "Application": "MyMascada",
      "Environment": "Production"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=db;Database=mymascada;Username=postgres;Password=your_postgres_password"
  },
  "Jwt": {
    "Key": "CHANGE_ME_IN_ENV_OVERRIDE__MUST_BE_AT_LEAST_256_BITS",
    "Issuer": "MyMascada",
    "Audience": "MyMascadaUsers"
  },
  "Authentication": {
    "Google": {
      "ClientId": "YOUR_PRODUCTION_GOOGLE_CLIENT_ID",
      "ClientSecret": "YOUR_PRODUCTION_GOOGLE_CLIENT_SECRET"
    }
  }
}